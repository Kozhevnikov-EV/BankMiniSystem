<Window x:Class="BankMiniSystem.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankMiniSystem.Views"
        mc:Ignorable="d"
        Title="miniTechnologies" Height="240" Width="200">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Tan"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Image Source="logo.JPG"/>
            <Button Content="Создать новый банк" Click="Button_NewBank"/>
            <Button Content="Загрузить существующий" Click="Button_Load"/>
            <Button Content="Демонстрация" Click="Button_Random"/>
            <Button Content="Выход" Click="Button_Exit"/>
        </StackPanel>
    </Grid>
</Window>
